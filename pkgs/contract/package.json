    "@types/jsonfile": "^6.1.4",
    "@types/mocha": ">=9.1.0",
    "chai": "^4.2.0",
    "dotenv": "^16.4.5",
    "hardhat": "^2.22.9",
    "hardhat-gas-reporter": "^1.0.8",
    "solady": "^0.0.201",
    "solhint": "^5.0.4",
